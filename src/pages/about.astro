---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageLayout from '../components/PageLayout.astro';
import Card from '../components/Card.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { getSiteTitle, t, getContent } from '../utils/config';
---

<BaseLayout
  title={t('about')}
  description={`${getContent('aboutMetaDescription')} - ${getSiteTitle()}`}
  activeNav="about"
>
  <PageLayout
    title={t('about')}
    subtitle={getContent('aboutSubtitle')}
    hasSidebar={true}
  >
    <Card slot="main" hover={false}>
      <h2>{getContent('welcomeTitle')}</h2>
      <p>
        {getContent('aboutContent')}
      </p>
      <h3>{getContent('whatYouFind')}</h3>
      <ul>
        <li>{getContent('aboutList1')}</li>
        <li>{getContent('aboutList2')}</li>
        <li>{getContent('aboutList3')}</li>
        <li>{getContent('aboutList4')}</li>
      </ul>
      <p>
        {getContent('thankYou')}
      </p>
    </Card>

    <Card slot="sidebar" className="connect-card" hover={false}>
      <h3>{getContent('letsConnect')}</h3>
      <p>{getContent('findMeOn')}</p>
      <SocialLinks />
    </Card>

    <Card slot="sidebar" className="tech-card" hover={false}>
      <h3>{getContent('builtWith')}</h3>
      <div class="tech-list">
        <span class="btn-link">Astro</span>
        <span class="btn-link">MDX</span>
        <span class="btn-link">TypeScript</span>
        <span class="btn-link">CSS3</span>
        <span class="btn-link">Liquid Glass Design</span>
      </div>
    </Card>
  </PageLayout>
</BaseLayout>

<style>
  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  /* Tech tags use unified btn-link class */
</style>
