---
import { getCurrentTheme } from '../config/themes';

const currentTheme = getCurrentTheme();
---

<style
  is:global
  define:vars={{
    colorBg: currentTheme.colors.bg,
    colorSurface: currentTheme.colors.surface,
    colorText: currentTheme.colors.text,
    colorTextSecondary: currentTheme.colors.textSecondary,
    colorTextTertiary: currentTheme.colors.textTertiary,
    colorAccent: currentTheme.colors.accent,
    colorAccentLight: currentTheme.colors.accentLight,
    colorBorder: currentTheme.colors.border,
    colorBorderLight: currentTheme.colors.borderLight,
  }}
>
  :root {
    /* Theme colors directly from config */
    --color-bg: var(--colorBg);
    --color-surface: var(--colorSurface);
    --color-text: var(--colorText);
    --color-text-secondary: var(--colorTextSecondary);
    --color-text-tertiary: var(--colorTextTertiary);
    --color-accent: var(--colorAccent);
    --color-accent-light: var(--colorAccentLight);
    --color-border: var(--colorBorder);
    --color-border-light: var(--colorBorderLight);
  }
</style>
