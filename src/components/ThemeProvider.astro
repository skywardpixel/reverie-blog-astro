---
import { getCurrentTheme } from '../styles/themes';

const currentTheme = getCurrentTheme();
---

<style
  is:global
  set:html={`
  :root {
    --color-bg: ${currentTheme.colors.bg};
    --color-surface: ${currentTheme.colors.surface};
    --color-text: ${currentTheme.colors.text};
    --color-text-secondary: ${currentTheme.colors.textSecondary};
    --color-text-tertiary: ${currentTheme.colors.textTertiary};
    --color-accent: ${currentTheme.colors.accent};
    --color-accent-light: ${currentTheme.colors.accentLight};
    --color-border: ${currentTheme.colors.border};
    --color-border-light: ${currentTheme.colors.borderLight};
  }
`}
></style>
