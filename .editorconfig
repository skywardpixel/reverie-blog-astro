# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Web files (HTML, CSS, JS, TS, Astro, etc.)
[*.{html,css,scss,js,ts,jsx,tsx,astro,vue,svelte}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Package files
[package.json]
indent_style = space
indent_size = 2

# Config files
[*.config.{js,ts,mjs,cjs}]
indent_style = space
indent_size = 2
