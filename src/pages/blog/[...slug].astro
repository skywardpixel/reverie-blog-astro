---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { calculateReadingTime, detectPrimaryLanguage } from '../../utils/reading-time';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

// Calculate reading time with support for Chinese and English content
const readingTime = calculateReadingTime(post.body);
const primaryLanguage = detectPrimaryLanguage(post.body);
---

<BlogPost data={post.data} readingTime={readingTime}>
  <div class={`post-content ${primaryLanguage === 'zh' ? 'lang-zh' : primaryLanguage === 'mixed' ? 'mixed-lang' : 'lang-en'}`}>
    <Content />
  </div>
</BlogPost>
