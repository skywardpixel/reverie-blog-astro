---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import { getSiteTitle, getSiteDescription } from '../utils/config';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title={`${getSiteTitle()} - Home`}
  description={getSiteDescription()}
  activeNav="home"
>
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line">Welcome to</span>
          <span class="title-line title-gradient">Reverie</span>
        </h1>
        <p class="hero-description">
          My personal space on the internet where I write about life, thoughts,
          and whatever catches my interest along the way.
        </p>
        <div class="hero-actions">
          <a href="/blog" class="btn btn-primary">
            <span>Read My Posts</span>
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
          <a href="/about" class="btn btn-secondary">
            <span>About</span>
          </a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="floating-card card-1"></div>
        <div class="floating-card card-2"></div>
        <div class="floating-card card-3"></div>
      </div>
    </div>
  </section>

  <section class="featured-posts">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Recent Posts</h2>
      </div>

      <div class="posts-grid">
        {posts.map(post => <BlogCard post={post} />)}
      </div>

      {
        posts.length > 0 && (
          <div class="section-footer">
            <a href="/blog" class="view-all-link">
              View all posts
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="5" y1="12" x2="19" y2="12" />
                <polyline points="12 5 19 12 12 19" />
              </svg>
            </a>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 500;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .title-line {
    display: block;
  }

  .title-gradient {
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-accent) 50%,
      var(--color-accent-light) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-flow 6s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradient-flow {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .hero-description {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    line-height: 1.65;
    color: rgba(44, 62, 80, 0.8);
    margin-bottom: 2rem;
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Buttons use unified system from global.css */

  .hero-visual {
    position: relative;
    height: 500px;
    perspective: 1000px;
  }

  .floating-card {
    position: absolute;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .card-1 {
    width: 280px;
    height: 180px;
    top: 20%;
    left: 10%;
    transform: rotate(-10deg) translateZ(50px);
    animation: float-1 20s ease-in-out infinite;
    background: linear-gradient(
      135deg,
      var(--color-bg-secondary),
      var(--color-border-light)
    );
  }

  .card-2 {
    width: 320px;
    height: 200px;
    top: 35%;
    right: 10%;
    transform: rotate(5deg) translateZ(100px);
    animation: float-2 18s ease-in-out infinite;
    background: linear-gradient(
      135deg,
      var(--color-border-light),
      var(--color-bg-secondary)
    );
  }

  .card-3 {
    width: 260px;
    height: 160px;
    bottom: 10%;
    left: 25%;
    transform: rotate(8deg) translateZ(75px);
    animation: float-3 22s ease-in-out infinite;
    background: linear-gradient(
      135deg,
      var(--color-bg-secondary),
      var(--color-border-light)
    );
  }

  @keyframes float-1 {
    0%,
    100% {
      transform: rotate(-10deg) translateZ(50px) translateY(0);
    }
    50% {
      transform: rotate(-8deg) translateZ(60px) translateY(-20px);
    }
  }

  @keyframes float-2 {
    0%,
    100% {
      transform: rotate(5deg) translateZ(100px) translateY(0);
    }
    50% {
      transform: rotate(3deg) translateZ(110px) translateY(-15px);
    }
  }

  @keyframes float-3 {
    0%,
    100% {
      transform: rotate(8deg) translateZ(75px) translateY(0);
    }
    50% {
      transform: rotate(10deg) translateZ(85px) translateY(-25px);
    }
  }

  .featured-posts {
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 500;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-accent) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section-description {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    color: rgba(44, 62, 80, 0.7);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-footer {
    text-align: center;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 8px;
    color: rgba(44, 62, 80, 0.9);
    text-decoration: none;
    font-weight: 500;
    transition: all 200ms ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .view-all-link:hover {
    background: rgba(255, 255, 255, 0.98);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  @media (max-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-description {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hero {
      min-height: calc(100vh - 4rem);
      padding: 2rem 0;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    /* Button responsive styles handled by unified system */

    .section-title {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .title-gradient,
    .floating-card {
      animation: none;
    }
  }
</style>
