---
import { format } from 'date-fns';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publishDate, heroImage, tags } = post.data;
const formattedDate = format(new Date(publishDate), 'MMMM dd, yyyy');
---

<article class="blog-card">
  <a href={`/blog/${post.slug}`} class="card-link">
    <div class="card-glass">
      <div class="card-glow"></div>
      {heroImage && (
        <div class="card-image">
          <img src={heroImage} alt={title} loading="lazy" />
        </div>
      )}
      <div class="card-content">
        <time class="card-date" datetime={publishDate.toISOString()}>
          {formattedDate}
        </time>
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
        {tags.length > 0 && (
          <div class="card-tags">
            {tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        <span class="card-arrow">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    position: relative;
    height: 100%;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-glass {
    position: relative;
    height: 100%;
    background: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(12px) saturate(120%);
    -webkit-backdrop-filter: blur(12px) saturate(120%);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    padding: 1.5rem;
    overflow: hidden;
    transition: all 400ms cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .card-glass::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.6) 20%,
      rgba(255, 255, 255, 0.6) 80%,
      transparent
    );
    opacity: 0;
    transition: opacity 400ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-glass::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(
      to top,
      rgba(99, 102, 241, 0.03),
      transparent
    );
    opacity: 0;
    transition: opacity 400ms cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(99, 102, 241, 0.08),
      transparent 40%
    );
    opacity: 0;
    transition: opacity 600ms cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    filter: blur(40px);
  }

  .blog-card:hover .card-glass {
    background: rgba(255, 255, 255, 0.9);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-8px) scale(1.02);
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.1),
      0 0 40px rgba(99, 102, 241, 0.05),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.4);
  }

  .blog-card:hover .card-glass::before {
    opacity: 1;
  }

  .blog-card:hover .card-glass::after {
    opacity: 1;
  }

  .blog-card:hover .card-glow {
    opacity: 1;
  }

  .card-image {
    position: relative;
    margin: -1.5rem -1.5rem 0;
    height: 200px;
    overflow: hidden;
    border-radius: 20px 20px 0 0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 600ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .card-image img {
    transform: scale(1.1);
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .card-date {
    font-size: 0.875rem;
    color: rgba(44, 62, 80, 0.6);
    font-weight: 500;
    letter-spacing: 0.025em;
    text-transform: uppercase;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    background: linear-gradient(
      135deg,
      rgba(44, 62, 80, 0.95) 0%,
      rgba(99, 102, 241, 0.95) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .card-title {
    background: linear-gradient(
      135deg,
      #2c3e50 0%,
      #6366f1 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .card-description {
    color: rgba(44, 62, 80, 0.8);
    line-height: 1.6;
    margin: 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(99, 102, 241, 0.08);
    border: 1px solid rgba(99, 102, 241, 0.15);
    border-radius: 12px;
    font-size: 0.8rem;
    color: rgba(99, 102, 241, 0.8);
    font-weight: 500;
    transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .tag {
    background: rgba(99, 102, 241, 0.12);
    border-color: rgba(99, 102, 241, 0.25);
    color: #6366f1;
  }

  .card-arrow {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    color: rgba(44, 62, 80, 0.7);
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .card-arrow {
    background: rgba(99, 102, 241, 0.15);
    border-color: rgba(99, 102, 241, 0.3);
    color: #6366f1;
    transform: translateX(4px);
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    .card-glass {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-image {
      height: 150px;
      margin: -1.25rem -1.25rem 0;
    }

    .card-arrow {
      width: 36px;
      height: 36px;
      bottom: 1.25rem;
      right: 1.25rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card-glass,
    .card-glass::before,
    .card-glass::after,
    .card-glow,
    .card-image img,
    .card-title,
    .tag,
    .card-arrow {
      transition-duration: 0.01ms !important;
    }

    .blog-card:hover .card-glass {
      transform: none;
    }

    .blog-card:hover .card-image img {
      transform: none;
    }
  }
</style>
