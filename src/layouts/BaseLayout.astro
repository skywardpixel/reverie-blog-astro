---
import Navigation from '../components/Navigation.astro';
import ThemeProvider from '../components/ThemeProvider.astro';
import {
  getSiteTitle,
  getSiteDescription,
  getDefaultOgImage,
  getSiteUrl,
  showRssLink,
  getSocialLinks,
} from '../utils/config';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  activeNav?: 'home' | 'blog' | 'about';
}

const {
  title,
  description = getSiteDescription(),
  image = getDefaultOgImage(),
  activeNav = 'home',
} = Astro.props;

const pageTitle = title ? `${title} - ${getSiteTitle()}` : getSiteTitle();
const siteUrl = getSiteUrl();
const socialLinks = getSocialLinks();

const canonicalURL = new URL(Astro.url.pathname, Astro.site || siteUrl);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site || siteUrl)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={new URL(image, Astro.site || siteUrl)}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&family=JetBrains+Mono:wght@400;500&family=Noto+Sans+SC:wght@300;400;500;600;700&family=Noto+Serif+SC:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    style={activeNav === 'home'
      ? '--nav-spacing: 0px'
      : '--nav-spacing: calc(var(--space-2xl) + var(--space-xl))'}
  >
    <ThemeProvider />
    <Navigation activeNav={activeNav} />

    <div class="layout-container">
      <main class="main-content">
        <slot />
      </main>

      <footer class="footer">
        <div class="container">
          <div class="footer-content">
            <p>
              &copy; {new Date().getFullYear()}
              {getSiteTitle()}. A personal blog built with care.
            </p>
            <div class="footer-links">
              {
                showRssLink() && (
                  <a
                    href="/rss.xml"
                    class="btn-social-icon"
                    aria-label="RSS Feed"
                  >
                    <svg
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M4 11a9 9 0 0 1 9 9" />
                      <path d="M4 4a16 16 0 0 1 16 16" />
                      <circle cx="5" cy="19" r="1" />
                    </svg>
                  </a>
                )
              }
              <a
                href={socialLinks.github}
                class="btn-social-icon"
                aria-label="GitHub"
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                  ></path>
                </svg>
              </a>
              <a
                href={socialLinks.twitter}
                class="btn-social-icon"
                aria-label="Twitter"
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  .layout-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .layout-container {
    padding-top: var(--nav-spacing, calc(var(--space-xl) + var(--space-xl)));
  }

  .main-content {
    flex: 1;
    position: relative;
    z-index: 10;
  }

  .footer {
    position: relative;
    z-index: 10;
    margin-top: 4rem;
    padding: 3rem 0;
    background: rgba(255, 255, 255, 0.95);
    border-top: none;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.08);
    width: 100%;
    min-height: 120px;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 3rem;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-content p {
    color: var(--color-text-secondary);
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .footer-links {
    display: flex;
    gap: 1rem;
    flex-shrink: 0;
  }

  /* Footer links use unified btn-social-icon class */

  @media (max-width: 640px) {
    .layout-container {
      padding-bottom: 0;
    }

    .layout-container {
      padding-top: var(--nav-spacing, calc(var(--space-2xl) + var(--space-lg)));
    }

    .footer {
      margin-top: 0;
      padding: 1.5rem 0;
      min-height: 100px;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
      padding: 0 1rem;
    }
  }
</style>
