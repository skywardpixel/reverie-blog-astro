---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteTitle, t } from '../utils/config';
---

<BaseLayout
  title={`404 - ${t('pageNotFoundTitle')} | ${getSiteTitle()}`}
  description={t('pageNotFoundDescription')}
>
  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <div class="error-visual">
          <div class="error-number">
            <span class="number-4">4</span>
            <span class="number-0">0</span>
            <span class="number-4-end">4</span>
          </div>
        </div>

        <div class="error-message">
          <h1 class="error-title">{t('pageNotFoundTitle')}</h1>
          <p class="error-description">
            {t('pageNotFoundDescription')}
          </p>

          <div class="error-actions">
            <a href="/" class="btn btn-primary">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
              <span>{t('goHome')}</span>
            </a>
            <a href="/blog" class="btn btn-secondary">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path
                  d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"
                ></path>
                <line x1="12" y1="6" x2="16" y2="6"></line>
                <line x1="12" y1="10" x2="16" y2="10"></line>
              </svg>
              <span>{t('blog')}</span>
            </a>
          </div>

          <div class="helpful-links">
            <h3>{t('helpfulLinks')}:</h3>
            <nav class="quick-links">
              <a href="/blog" class="btn-link">{t('latestPosts')}</a>
              <a href="/about" class="btn-link">{t('about')}</a>
              <a href="/" class="btn-link">{t('home')}</a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 0;
    position: relative;
  }

  .error-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1000px;
    position: relative;
  }

  .error-visual {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-number {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    z-index: 10;
    position: relative;
  }

  .error-number span {
    font-family: var(--font-display);
    font-size: clamp(4rem, 12vw, 8rem);
    font-weight: 300;
    line-height: 1;
    text-align: center;
    letter-spacing: -0.05em;
  }

  .number-4,
  .number-4-end {
    color: var(--color-accent);
  }

  .number-0 {
    color: var(--color-text-tertiary);
    opacity: 0.5;
  }

  .error-message {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .error-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 500;
    line-height: 1.2;
    letter-spacing: -0.025em;
    color: var(--color-text);
    margin: 0;
  }

  .error-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 500px;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Buttons use unified system from global.css */

  .helpful-links {
    margin-top: 1rem;
  }

  .helpful-links h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    letter-spacing: -0.015em;
  }

  .quick-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  /* Quick links use unified btn-link class */

  @media (max-width: 1024px) {
    .error-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .error-visual {
      height: 300px;
    }

    .error-number span {
      font-size: clamp(3rem, 10vw, 6rem);
    }
  }

  @media (max-width: 640px) {
    .error-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .error-content {
      gap: 2rem;
    }

    .error-visual {
      height: 200px;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-description {
      font-size: 1.1rem;
    }

    /* Button responsive styles handled by unified system */

    .error-actions {
      justify-content: center;
    }

    .quick-links {
      justify-content: center;
    }
  }
</style>
