---
import { format } from 'date-fns';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publishDate, heroImage, tags } = post.data;
const formattedDate = format(new Date(publishDate), 'MMMM dd, yyyy');
---

<article class="blog-card">
  <a href={`/blog/${post.slug}`} class="card-link">
    <div class="card-glass">
      <div class="card-content">
        <time class="card-date" datetime={publishDate.toISOString()}>
          {formattedDate}
        </time>
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
        {
          tags.length > 0 && (
            <div class="card-tags">
              {tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )
        }
        <span class="card-arrow">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    position: relative;
    height: 100%;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-glass {
    position: relative;
    height: 100%;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all var(--transition);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    box-shadow: var(--shadow-sm);
    padding: var(--space-xl);
  }

  .blog-card:hover .card-glass {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-accent);
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    min-width: 0;
    padding-right: 48px; /* Space for arrow button */
  }

  .card-date {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-title {
    font-family: var(--font-family);
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: var(--leading-tight);
    margin: 0;
    color: var(--color-text);
    transition: color var(--transition);
  }

  .blog-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-description {
    font-family: var(--font-family);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-normal);
    margin: 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: auto;
    margin-bottom: var(--space-sm);
    padding-right: var(--space-md);
  }

  .tag {
    padding: 0.25rem var(--space-sm);
    background: #f1f6f2;
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-accent);
    font-weight: 500;
    line-height: 1.2;
    height: 24px;
    display: inline-flex;
    align-items: center;
  }

  .card-arrow {
    position: absolute;
    bottom: var(--space-lg);
    right: var(--space-lg);
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    transition: all var(--transition);
    z-index: 10;
  }

  .blog-card:hover .card-arrow {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    .card-glass {
      padding: var(--space-lg);
    }

    .card-content {
      padding-right: 36px; /* Smaller space for mobile arrow */
    }

    .card-title {
      font-size: var(--text-lg);
    }

    .card-arrow {
      width: 28px;
      height: 28px;
      bottom: var(--space-md);
      right: var(--space-md);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card-glass,
    .card-glass::before,
    .card-glass::after,
    .card-glow,
    .card-image img,
    .card-title,
    .tag,
    .card-arrow {
      transition-duration: 0.01ms !important;
    }

    .blog-card:hover .card-glass {
      transform: none;
    }

    .blog-card:hover .card-image img {
      transform: none;
    }
  }
</style>
