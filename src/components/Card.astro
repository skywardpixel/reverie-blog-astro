---
export interface Props {
  className?: string;
  hover?: boolean;
}

const { className = '', hover = true } = Astro.props;
---

<div class={`card content ${hover ? 'card--hover' : ''} ${className}`}>
  <slot />
</div>

<style>
  .card {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: 2.5rem;
    transition: all 200ms ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .card--hover:hover {
    background: rgba(255, 255, 255, 0.98);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  /* Content styling now handled by global content system */

  @media (max-width: 640px) {
    .card {
      padding: 1.5rem;
      border-radius: 12px;
    }

    /* Mobile content styling handled by global content system */
  }
</style>
