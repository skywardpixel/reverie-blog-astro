---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageLayout from '../components/PageLayout.astro';
import Card from '../components/Card.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { getSiteTitle, t, siteConfig } from '../utils/config';
---

<BaseLayout
  title={t('about')}
  description={`Learn more about me and this personal blog - ${getSiteTitle()}`}
  activeNav="about"
>
  <PageLayout
    title={t('about')}
    subtitle={siteConfig.aboutSubtitle}
    hasSidebar={true}
  >
    <Card slot="main" hover={false}>
      <h2>Welcome</h2>
      <p>
        This is my personal space where I share thoughts on life, experiences,
        and whatever catches my interest. It's a simple blog without a specific
        focusâ€”just honest reflections and stories.
      </p>
      <h3>What You'll Find</h3>
      <ul>
        <li>Personal reflections and life experiences</li>
        <li>Thoughts on books, movies, and music</li>
        <li>Daily observations and random musings</li>
        <li>Updates on projects and goals</li>
      </ul>
      <p>
        Thanks for stopping by. Feel free to reach out if something resonates
        with you.
      </p>
    </Card>

    <Card slot="sidebar" className="connect-card" hover={false}>
      <h3>{t('letsConnect')}</h3>
      <p>{t('findMeOn')}</p>
      <SocialLinks />
    </Card>

    <Card slot="sidebar" className="tech-card" hover={false}>
      <h3>{t('builtWith')}</h3>
      <div class="tech-list">
        <span class="btn-link">Astro</span>
        <span class="btn-link">MDX</span>
        <span class="btn-link">TypeScript</span>
        <span class="btn-link">CSS3</span>
        <span class="btn-link">Liquid Glass Design</span>
      </div>
    </Card>
  </PageLayout>
</BaseLayout>

<style>
  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  /* Tech tags use unified btn-link class */
</style>
