---
import { getSocialLinks, t } from '../utils/config';

export interface Props {
  variant?: 'vertical' | 'horizontal';
  showLabels?: boolean;
}

const { variant = 'vertical', showLabels = true } = Astro.props;
const socialLinks = getSocialLinks();
---

<div class={`social-links social-links--${variant}`}>
  <a href={socialLinks.github} class="btn-social" aria-label={t('ariaGithub')}>
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path
        d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
      ></path>
    </svg>
    {showLabels && <span>{t('github')}</span>}
  </a>

  <a
    href={socialLinks.twitter}
    class="btn-social"
    aria-label={t('ariaTwitter')}
  >
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path
        d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
      ></path>
    </svg>
    {showLabels && <span>{t('twitter')}</span>}
  </a>

  <a
    href={`mailto:${socialLinks.email}`}
    class="btn-social"
    aria-label={t('ariaEmail')}
  >
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path
        d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
      ></path>
      <polyline points="22,6 12,13 2,6"></polyline>
    </svg>
    {showLabels && <span>{t('email')}</span>}
  </a>
</div>

<style>
  .social-links--vertical {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-links--horizontal {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Use unified btn-social class from global styles */
  .social-links--horizontal .btn-social {
    width: auto;
    aspect-ratio: unset;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
  }

  .social-links--vertical .btn-social {
    width: auto;
    aspect-ratio: unset;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    justify-content: flex-start;
  }

  .social-links--vertical .btn-social:hover {
    transform: translateX(4px);
  }

  .btn-social svg {
    flex-shrink: 0;
  }

  .btn-social span {
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .social-links--horizontal {
      flex-direction: column;
      gap: 0.75rem;
    }

    .social-links--horizontal .btn-social {
      padding: 0.75rem 1rem;
      justify-content: flex-start;
    }

    .social-links--horizontal .btn-social:hover {
      transform: translateX(4px);
    }
  }
</style>
